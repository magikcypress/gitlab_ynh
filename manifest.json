{
    "name": "Gitlab for Yunohost",
    "id": "gitlab",
    "packaging_format": 1,
    "description": {
        "en": "Git repository management",
        "fr": "Gestion des dépôts git"
    },
    "url": "https://gitlab.com",
    "license": "free",
    "maintainer": {
        "name": "Andrea Cotza",
        "email": "andrea@cotza.me"
    },
    "requirements": {
        "yunohost": ">> 2.4.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "postgresql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain or subdomain for gitlab (install on root '/')",
                    "fr": "Choisissez un domaine ou sous-domaine pour gitlab (installation à la racine '/')"
                },
                "example": "git.domain.org"
            },
            {
                "name": "path",
        "type": "path",
                "ask": {
                    "en": "Choose a path for Gitlab",
                    "fr": "Choisissez un chemin pour Gitlab"
                },
                "example": "/example",
                "default": "/example"
            },
            {
                "name": "admin",
        "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l’administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "language",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "fr"
            }
        ]
    }
}